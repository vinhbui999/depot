<% unless session[:user_id]%>
<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice">
      <%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      <div>
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name], required: true %> </div>
      <div>
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password], required: true %> </div>
      <div>
        <%= submit_tag "Login" %> </div>
    </fieldset>
  <% end %> 
  <%= link_to "Do not have account? Create one", new_user_url%>
  </div>
<% end %>
