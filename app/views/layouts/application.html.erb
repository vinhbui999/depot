<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script>
      $(function() {
        setInterval(function() {
            $('#side-foot').load('/store/get_time');
        }, 1000);
      }); //this for clock currently running
    </script>
  </head>
  <body class="<%= controller.controller_name%>">
    <div id='banner'>
      <%= image_tag("logo.jpeg", alter:"The pramatic Bookshelf")%>
      <span class='title'> <%= @page_title%> </span>
      <%# <%= render partial: "shared/count" if session[:count]>5 %>
    </div>
    <div id='columns'>
      <div id='side'>
        <% if @cart %>
          <%= hidden_div_if(@cart.line_items.empty?, id:'cart') do %>
            <%=render @cart %>
          <% end %>
        <% end %>
        <ul>
          <li> <%=link_to "Home", store_index_url %> </li>
          <li> <a href="root_path">Question</a> </li>
          <li> <a href="root_path">News</a> </li>
          <li> <a href="root_path">Contact</a> </li>
          <%if session[:user_id].nil? %>
            <li>
              <%=link_to "Log in", login_url%>
            </li>
          <% end %>
        </ul>
        <% if session[:user_id] %>
          <ul>
            <li><%= link_to 'Orders', orders_path %></li>
            <li><%= link_to 'Products', products_path %></li>
            <li><%= link_to 'Users', users_path %></li>
          </ul>
          <%= button_to 'Logout', logout_path, method: :delete %> <% end %>
      </div>
      <div id='main'>
        <%= yield %>
      </div>
    </div>
  </body>
  <footer>
    <div id='side-foot'></div>
  </footer>
</html>
