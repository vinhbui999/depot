<p id="notice"><%= notice %></p>
<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= @users.index(user) + 1%> </td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, locale: I18n.locale %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
